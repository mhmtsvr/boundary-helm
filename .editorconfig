# EditorConfig: https://EditorConfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# YAML files (Helm charts, Kubernetes manifests)
[*.{yaml,yml}]
indent_size = 2

# Helm template files
[*.tpl]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2
